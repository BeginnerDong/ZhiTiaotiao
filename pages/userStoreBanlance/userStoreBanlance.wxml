	<view class="top-text2" wx:if="{{web_currentId==2}}">联盟金结算金额（￥）</view>
	<view class="btn" bindtap="intoPath" data-path="/pages/userStoreCash/userStoreCash">提现</view>
</view>
<view class="tab font30 flexRowBetween" style="border-bott: ;om: solid 20rpx #F5F5F5;">
