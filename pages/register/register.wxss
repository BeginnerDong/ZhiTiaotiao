.row{
	border-bottom: solid 1rpx #ECECEC;
	width: 100%;
	height: 100rpx;
	box-sizing: border-box;
	}

.row-text{
	display: inline-block;
	font-size: 30rpx;
	box-sizing: border-box;
	float: left;
	line-height: 96rpx;
	margin-left: 20rpx;
}
.row input{
	display: inline-block;
	font-size: 26rpx;
	height: 100%;
	margin-left: 30rpx;
}
.row-box{
	height: 50rpx;
