.user_img{
	width:140rpx;
	height:140rpx;
	border-radius:50%;
	overflow:hidden;
	margin:0px auto;
}
.date{
	height:90rpx;
	border-top:solid 1px #f4f4f4;
	border-bottom:solid 1px #f4f4f4;
	display:flex;
	align-items: center;
  	justify-content: center;
  	color:#666;
  	margin-bottom:40rpx;
}
.date_left{
	height:70rpx;
}
.date_item{
	height:90rpx;
	border-right:solid 1px #f4f4f4;
	width:50%;
	text-align:center;
	display:flex;
	align-items: center;
  	justify-content: center;
}
.date_item .text{
	height:50%;
}
.date_item image{
	width:22rpx;
	height:12rpx;
	margin-left:10rpx;
}
.team_list{
	padding:40rpx 20rpx 20rpx;
	border-bottom:solid 1px #f4f4f4;
}

.blank{
	text-align:center;
}
.blank image{
	width:214rpx;
	height:280rpx;
	margin-top:200rpx;
}
.record_tlt{
	width:100%;
	height:88rpx;
}
.w33{
	width:50%;
	text-align:center;
	height:80rpx;
	line-height:80rpx;
}
.record_list{
	width:100%;
	height:82rpx;
	border-bottom:solid 1px #f0f0f0;
}
.record_list .w33:nth-child(2n){
	border-left:solid 1px #f0f0f0;
}
.member_tlt{
	width:100%;
	height:68rpx;
	line-height:88rpx;
	text-align:center;
}
.member_cont{
	height:140rpx;
	
}
.member_item{
	width:33.33%;
}
.member_item>view{
	text-align:center;
	color:#182c4f;
}
.search{
	width:94%;
	height:66rpx;
	background:#f0f0f0;
	border-radius:20rpx;
	padding:0 3%;
	margin:54rpx 0 36rpx 0;
}
.search_btn{
	width:12%;
	text-align: center;
}
.search_btn image{
	width:36rpx;
	height:36rpx;
}
.search input{
	width:88%;
	height:100%;
	text-align:center;
}
.piece_top{
	height:210rpx;
	background-color: #2a75f1;
