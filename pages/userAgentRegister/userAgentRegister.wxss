/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	overflow:hidden;
}
.input_list1{
	height:88rpx;
	border-bottom:solid 1px #e0e0e0;
}
.input_list1 .input_before{
	width:22%;
}
.input_list1 input{
	width:76%;
	padding-left:2%;
	height:100%;
	border-radius:16rpx;
}

.submit_info{
	width:100%;
	height:80rpx;
	line-height:80rpx;
	position:fixed;
	left:0;
	bottom:0;
	border-radius:0;
	margin:0 auto;
}

.message_left{
	width:22%;
}
.message_right{
	width:78%;
	height:258rpx;
	border:solid 1px #e5e5e5;
}
.message_right textarea{
	width:94%;
	padding:2%;
	height:100%;
}
.message{
	margin-top:48rpx;
}
.get_check{
	width:170rpx;
	height:50rpx;
	text-align: center;
	line-height:50rpx;
	background: #f5f5f5;
	color:#666;
	font-size:24rpx;
	border:0;
}
.picker_in{
	width:100%;
	height:70rpx;
}
.picker{
	width:90%;
	height:48rpx;
	line-height:48rpx;
	color:#666;
	font-size:26rpx;
	text-align:center;
	float:left;
}
.input{
	width:70%;
	border:solid 1px #f0f0f0;
}
.down{
	width:10%;
}
.down image{
	width:16rpx;
	height:14rpx;
}
.upload{
	width:30%;
	height:240rpx;
	line-height:240rpx;
	border:solid 1px #e0e0e0;
	background:#f2f2f2;
	text-align: center;
}
.upload image{
	width:100%;
	height:100%;
}
.city{
	width:70%;
}
.city picker{
	width:100%;
	height:100%;
	text-align:left;
}