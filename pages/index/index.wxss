/**index.wxss**/
@import "../../wxParse/wxParse.wxss"; 
.position{
	height:68rpx;
} 
.position_left{
	width:100%;
}
.position_right{
	
}
.position_right image{
	width:45rpx;
	height:40rpx;
}
.position_left image{
	width:35rpx;
	height:45rpx;
	margin-right:20rpx;
}
.page-body image{
	width:100%;
	height:330rpx;
}
swiper{
	height:330rpx;
}
.swiper-block{
  height: 330rpx;
  width: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
}
.slide-image{
  height:330rpx;
  width: 520rpx;
  border-radius: 9rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2); 
  margin: 0rpx 30rpx;
  z-index: 1;  
}

.indexTitle image{
	width:36rpx;
	height:36rpx;
	margin-right:10rpx;
}
.indexTitle{
	width:100%;
	height:94rpx;
}
.goodnews-box{
	border:1rpx solid #fff; 
	height: 180rpx; 
	box-sizing: border-box;
	margin-top: 30rpx;
}
.goodnews{
	width: 100%;
	height: 135rpx;
	background: #fff;
	margin-top:21rpx;
}
.good-img{
	border: solid 1rpx #fff;
	width: 120rpx;
	height: 100%;
	display: inline-block;
}
.good-text{
	display: inline-block;
	font-size: 26rpx;
	border: solid 1rpx #fff;
	width: 80%;
	height: 60%;
	position: relative;
	top: -26rpx;
	overflow: hidden;
}


/*************横向滚动*****************/
.recommend_scroll_x_box {
  height:180rpx;
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.recommend_hot_box {
  width: 280rpx;
  height:180rpx;
  margin-right:20rpx;
  display: inline-block;
  overflow:hidden;
  position: relative;
}
.recommend_hot_box image{
	width:100%;
	height:100%;
}
.store_name{
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	background:rgba(0,0,0,0.3);
	text-align:center;
	line-height:180rpx;
}
/**********advertisement*************/
.advertisement{
	background:#f0f0f0;
	height:192rpx;
	margin-top:44rpx;
}
.advertisement image{
	width:100%;
	height:152rpx;
}
/*******热门商家********/
.index_product{
	flex-wrap: wrap;
}
.recommend_top{
	width:100%;
	/* height:212rpx; */
  height: 250rpx;
	overflow: hidden;
}
.recommend_top image{
	width:100%;
	height:100%
}
.recommend_left{
	width:48.2%;
	background: #fff;
	padding-bottom: 20rpx;
	height:330rpx;
	margin-bottom:26rpx;
}
.index_product .product_item{
  justify-content: left;

}
.product_name{
	height:60rpx;
	line-height:64rpx;
	overflow:hidden;
	width:92%;
	padding:0 5%;
}
.product_pro{
	width:92%;
	padding:0 4%;
}
.product_item{
	width:33.33%;
}
.product_item image{
	width:26rpx;
	height:26rpx;
	margin-right:8rpx;
}
.swiper_container {
    height: 55rpx;
    width: 80vw;
	line-height:55rpx
 }