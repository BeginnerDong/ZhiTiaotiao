	.reword{
		width:100rpx;
		height:100rpx;
		text-align:center;
		border-radius:50%;
		overflow:hidden;
		background:#fff;
		position:fixed;
		right:0;
		bottom:20%;
		box-shadow:0 0 20rpx #ffa37a;
		
	}
	.reword_in{
		width:68%;
		margin:0 auto;
		color: #0d6fb8;
	}
	.mask{
		width:100%;
		height:100%;
		position:fixed;
		left:0;
		top:0;
		background:rgba(0,0,0,0.5);
		z-index:9999;
	}
	.rule{
		width:90%;
		height:95%;
