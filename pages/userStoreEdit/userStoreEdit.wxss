@import "../../wxParse/wxParse.wxss"; 
page{
	
}
.input_list1{
	height:88rpx;
	border-bottom:solid 1px #e0e0e0;
}
.input_list1 .input_before{
	width:22%;
}
.input_list1 .product_cont{
	width:76%;
	padding-left:2%;
	height:100%;
	border-radius:16rpx;
}
.input{
	width:50%;
	height:240rpx;
	line-height:240rpx;
	border:solid 1px #e0e0e0;
	background:#f2f2f2;
	text-align: center;
}
.input image{
	width:80rpx;
	height:80rpx;
	margin:0 auto;
	
}
.submit_info{
	width:100%;
	height:80rpx;
	line-height:80rpx;
	
	border-radius:0;
	margin:0 auto;
}
.input .input_edit{
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	background:rgba(0,0,0,0.5);
}
.message_right{
	height:258rpx;
}
.message_right textarea{
	width:100%;
	height:100%;
}
.message{
	margin-top:48rpx;
}
.store-row{
	border-bottom: solid 1rpx #F0F0F0;
	height: 80rpx;
}
.store-texta{
	display: inline-block;
	/* border: solid 1rpx red; */
	height: 100%;
	float: left;
	margin-left: 20rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	color: #000;
}
.store-textb{
	display: inline-block;
	/* border: solid 1rpx red; */
	height: 100%;
	line-height: 80rpx;
	font-size: 26rpx;
	margin-left: 30rpx;
	}
	
.store-textc{
	font-size: 28rpx; 
	line-height: 80rpx;
}
.business{
	border: solid 1rpx #fff;
	width: 350rpx;
	height: 210rpx;
	margin: 0 auto;
	background-color: #E1E1E1;
	overflow: hidden;
}
.business image{
	width: 180rpx;
	height: 210rpx;
}
.picCloseBtn{
  width:40rpx;height:40rpx;position:absolute;top:-14rpx;right:6rpx;background: #fff;box-shadow: 0 0 5px rgba(0,0,0,0.3);border-radius: 50%;
}
.business-2{
	border: solid 1rpx #fff;
	width: 260rpx;
	height: 320rpx;
	margin-left:20rpx;
	overflow: hidden;
	background-color: #E1E1E1;
  float: left;
}
.business-2 image{
	width: 250rpx;
	height: 150rpx;
}

button{
	width: 80%;
	height: 75rpx;
	background: #0d6fb8;
