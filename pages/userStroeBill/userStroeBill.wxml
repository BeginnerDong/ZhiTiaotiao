<!--index3.wxml-->
<view class="piece_top flex">
    <view style="width:100%;text-align: center;">
		<view class="color1" style="text-align:center;" style="font-size:60rpx" wx:if="{{web_currentId==0}}">{{web_userInfoData.balance}}</view>
		<view class="color1" style="text-align:center;" style="font-size:60rpx" wx:if="{{web_currentId==1}}">{{web_userInfoData.reward}}</view>
        <view class="piece_row flexCenter">
            <view class="color1 font24" style="margin-top: 20rpx;" wx:if="{{web_currentId==0}}">货款总额(¥)</view>
			<view class="color1 font24" style="margin-top: 20rpx;" wx:if="{{web_currentId==1}}">联盟金总额(¥)</view>
			<view class="color1 font24" style="margin-top: 20rpx;" wx:if="{{web_currentId==2}}">结算总额(¥)</view>   
        </view> 
    </view>
</view>
<view class="tab font30 flexRowBetween">
    <view class="tab_item {{web_currentId == 0?'tab_this':''}}" data-id="0" bindtap="tab">
        货款
    </view>
    <view class="tab_item {{web_currentId == 1?'tab_this':''}}" data-id="1"  bindtap="tab">
        联盟金
    </view>
    <view class="tab_item {{web_currentId == 2?'tab_this':''}}" data-id="2"  bindtap="tab">
        结算
    </view>
</view>
<view class="date font30">
    <view class="date_item">
        <view style="width:45%;display:flex;align-items:center;">
            <view class="date_left" style="color:#00c6f7;width:100%;">
                <picker  mode="date"  value="{{web_startTime}}" data-type="startTime" bindchange="bindTimeChange">
                    <view style="display:flex;align-items:center;width:100%;height:100%;">
                        <view style="width:85%;height:70rpx;">
                            <view class="picker text">
                              起始日期
                            </view>
                            <view class="text  font22" >{{web_startTime}}</view>
                        </view>
                        <view style="width:15%;height:70rpx;align-items:center;">
                            <image src="/images/up.jpg"></image>
                        </view>
                    </view> 
                </picker>
                
            </view>
            
        </view> 
    </view>
    <view class="date_item">
        <view style="width:45%;display:flex;align-items:center;">
            <view class="date_left" style="color:#00c6f7;width:100%;">
                <picker  mode="date" value="{{web_endTime}}" data-type="endTime" bindchange="bindTimeChange" >
                    <view style="display:flex;align-items:center;width:100%;height:100%;">
                        <view style="width:85%;height:70rpx;">
                            <view class="picker text">
                              截至日期
                            </view>
                            <view class="text font22">{{web_endTime}}</view>
                        </view>
                        <view style="width:15%;height:70rpx;">
                            <image src="/images/up.jpg"></image>
                        </view>
                    </view>
                </picker>
            </view>
            
        </view> 
    </view>     
</view>
<view style="{{web_currentId==0?'display:block':'display:none'}};margin-top:30rpx;">
    <view class="credit_cont" wx:for="{{web_mainData}}">
        <view class="credit_list">
            <view class="credit_item" >
               
                <view class="credit_left">
                    <view class="credit_reson font28">
                        {{item.shopInfo.nickname}}
                    </view>
                    <view class="credit_dates font24 color9">
                        {{item.create_time}}
                    </view>
                </view>
                <view class="credit_right font28">
                    +{{item.count}}
                </view>
            </view>
        </view>
    </view>
</view>
<view style="{{web_currentId==1?'display:block':'display:none'}};margin-top:30rpx;">
    <view class="credit_list" wx:for="{{web_mainData}}">
        <view class="credit_item">
            <view class="credit_left">
                <view class="credit_reson font24">
                   {{item.shopInfo.nickname}}
                </view>
                <view class="credit_dates font22 color9">
                    {{item.create_time}}
                </view>
                <view class="font22 color9">明细明细明细明细明细</view>
            </view>
            <view class="credit_right font28">
                {{item.count}}
            </view>
        </view>
    </view>
    <view class="blank" wx:if="{{web_mainData.length==0}}">
        <image src="/images/members-img.png"></image>
    </view>
</view>
<view style="{{web_currentId==2?'display:block':'display:none'}};margin-top:30rpx;">
    <view class="record_tlt flex" style="background:#f5f5f5;">
      <view class="w33 color2 font30">营业额</view>
      <view class="w33 color2 font30">联盟金</view>
      <view class="w33 color2 font30">结算金额</view>
      <view class="w33 color2 font30">时间</view>
    </view>
    <view class="record_list flex">
      <view class="w33 color6 font24">5552</view>
      <view class="w33 color6 font24">32332</view>
      <view class="w33 color6 font24">23233</view>
      <view class="w33 color6 font24">2012-5-9</view>
    </view>
</view>