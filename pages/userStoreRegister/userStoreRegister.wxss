/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	overflow:hidden;
}
.input_list1{
	height:96rpx;
	border-bottom:solid 1px #e0e0e0;
}
.input_list1 .input_before{
	width:22%;
}
.input_list1 input{
	width:76%;
	padding-left:2%;
	height:100%;
	border-radius:16rpx;
}

.submit_info{
	width:80%;
	height:80rpx;
	line-height:80rpx;
	border-radius:15rpx;
	margin:200rpx auto;
	font-size: 30rpx;
  background: #0d6fb8;

}

.message_left{
	width:22%;
}
.message_right{
	width:70%;
	height:258rpx;
	border:solid 1px #e5e5e5;
}
.message_right textarea{
	width:100%;
	padding:10rpx;
	height:100%;
  box-sizing:border-box;
}
.message{
	margin-top:48rpx;
}
.get_check{
	width:170rpx;
	height:50rpx;
	text-align: center;
	line-height:50rpx;
	background: #f5f5f5;
	color:#666;
	font-size:24rpx;
	border:0;
}
.picker_in{
	width:100%;
}
.picker{
	width:90%;
	height:48rpx;
	line-height:48rpx;
	color:#666;
	font-size:26rpx;
	text-align:center;
	float:left;
  padding: 6rpx;
}
.input{
	width:70%;
	border:solid 1px #d7d7d7;
}
.down{
	width:10%;
}
.down image{
	width:16rpx;
	height:14rpx;
}