/**index.wxss**/

@import "../../wxParse/wxParse.wxss"

page{
	background:#f0f0f0;
}
.stroe{
	height:200rpx;
	border-radius:10rpx;
	overflow:hidden;
	margin-top:30rpx;
}
.store_left{
	width:59%;
	height:160rpx;
}
.store_right{
	width:41%;
	height:160rpx;
	text-align: right;
}
.store_right image{
	width:200rpx;
	height:160rpx;
}
.store_name{
	width:100%;
	height:68rpx;
}
.store_item{
	width:50%;
	height:42rpx;
}
.store_item image{
	width:22rpx;
	height:22rpx;
	margin-right:10rpx;
}
.store_infor{

	margin-top:10rpx;
}
.stroe_search{
	height:146rpx;
}
.stroe_search_left{
	width:20%;
	height:60rpx;
}
.stroe_search_right{
	width:80%;
	height:60rpx;
}
.stroe_search_left image{
	width:28rpx;
	height:28rpx;
	margin-right:20rpx;
}
.search{
	width:94%;
	height:66rpx;
	background:#fff;
	border-radius:20rpx;
	padding:0 3%;
}
.search_btn{
	width:12%;
	text-align: center;
}
.search_btn image{
	width:36rpx;
	height:36rpx;
}
.search input{
	width:88%;
	height:100%;
}
.maskStore{
	width:100%;
	height:100%;
	
	background:rgba(0,0,0,0.5);
	position:fixed;
	top:117rpx;
	left:0;
	z-index:999;
	overflow:hidden;
}
.storeChoose{
	width:90%;
	height:450rpx;
	background:#fff;
	position:absolute;
	top:117rpx;
	z-index:999;
	left:5%
}

.store-type{
	width: 690rpx;
	position: fixed;
	background: #fff;
	margin-left: 30rpx;
	top: 0rpx;
	
}
.type-item{
	display: inline-block;
	border-bottom: solid 1rpx #F1F1F1;
	width: 180rpx;
	height: 90rpx;
	text-align: center;
	line-height: 80rpx;
	font-size: 28rpx;
	margin-left: 35rpx;
	
}