}
.maskStore{
	width:100%;
	height:100%;
	
	background:rgba(0,0,0,0.5);
	position:fixed;
	top:117rpx;
	left:0;
	z-index:999;
	overflow:hidden;
}
.storeChoose{
	width:90%;
	height:450rpx;
	background:#fff;
	position:absolute;
