}

.store-type{
	width: 690rpx;
	position: fixed;
	background: #fff;
	margin-left: 30rpx;
	top: 0rpx;
	
}
.type-item{
	display: inline-block;
	border-bottom: solid 1rpx #F1F1F1;
	width: 180rpx;
	height: 90rpx;
	text-align: center;
	line-height: 80rpx;
	font-size: 28rpx;
	margin-left: 35rpx;
	
}
.mask{
 	width:100%;
 	height:100%;
 	background:rgba(0,0,0,0.5);
 	position:fixed;
 	overflow: hidden;
 	left:0;
 	top:0;
 }
 .confirm{
 	width:70%;
 	height:336rpx;
 	border-radius:20rpx;
 	position:absolute;
 	left:15%;
 	top:30%;
 }
 .confirm_tlt{
 	width:100%;
 	height:120rpx;
 	line-height:120rpx;
 	font-size:28rpx;
