/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	overflow:hidden;
}
.input_list1{
	height:88rpx;
	border-bottom:solid 1px #e0e0e0;
}
.input_list1 .input_before{
	width:22%;
}
.input_list1 input{
	width:76%;
	padding-left:2%;
	height:100%;
	border-radius:16rpx;
}
.input{
	width:30%;
	height:240rpx;
	line-height:240rpx;
	border:solid 1px #e0e0e0;
	background:#f2f2f2;
	text-align: center;
}
.input image{
	width:80rpx;
	height:80rpx;
	margin:0 auto;
	
}
.submit_info{
	width:100%;
	height:80rpx;
	line-height:80rpx;
	position:fixed;
	left:0;
	bottom:0;
	border-radius:0;
	margin:0 auto;
}
.message_left{
	width:22%;
}
.message_right{
	height:258rpx;
}
.message_right textarea{
	width:100%;
	height:100%;
}
.message{
	margin-top:48rpx;
}
.banner{
	width:100%;
	height:330rpx;
	overflow:hidden;
}
.banner image{
	width:100%;
}