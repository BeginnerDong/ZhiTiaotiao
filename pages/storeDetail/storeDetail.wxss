/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
}
view{
	border-radius: 0;
}
.page-body image{
	width:100%;
	height:330rpx;
}
swiper{
	height:330rpx;
}
.swiper-block{
  height: 330rpx;
  width: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
}
.slide-image{
  height:330rpx;
  width: 520rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2); 
  margin: 0rpx 30rpx;
  z-index: 1;  
}
.store_tlt{
	width:100%;
	height:90rpx;
	line-height:100rpx;
	overflow:hidden;
}
.commnet{
	width:100%;
	height:30rpx;
	margin-bottom: 30rpx;
}
.commnet_item{
	width:120rpx;
	height:40rpx;
	margin-right:48rpx;
}
.commnet_item image{
	width:22rpx;
	height:22rpx;
	margin-right:6rpx;
}
.position_left{
	width:100%;
	height:70rpx;
}
.position_left image{
	width:22rpx;
	height:28rpx;
	margin-right:20rpx;
}
.index_product{
	flex-wrap: wrap;
}
.recommend_top{
	width:100%;
	height:260rpx;
	overflow: hidden;
}
.recommend_top image{
	width:100%;
	height:100%
}
.recommend_left{
	width:47.5%;
	padding-bottom: 20rpx;
	height:430rpx;
	margin-top:26rpx;
}
.product_name{
	height:76rpx;
	width:92%;
	padding:0 4%;
	margin:10rpx 0;
}
.product_pro{
	width:86%;
	padding:0 4%;
	line-height:40rpx;
}
.product_item{
	width:33.33%;
}
.product_item image{
	width:22rpx;
	height:22rpx;
	margin-right:10rpx;
}
.store_product{
	border-top:solid 20rpx #f0f0f0;
}
.tabs_item{
	width:50%;
	text-align:center;
	height:80rpx;
	line-height:80rpx;
}
.tabs_this{
	color:#de5d1c;
	border-bottom:solid 1px #de5d1c;
}
.tabs_item text{
	height:78rpx;
	line-height:78rpx;
	display:inline-block;
}

.condition{
	margin-top:30rpx;
}
.condition image{
	width:100%;
	height:600rpxs;
}
.store_bottom{
	height:100rpx;
	position:fixed;
	left:0;
	bottom:0;
	width:100%;
}
.store_btn{
	width:50%;
}
.store_btn image{
	width:32rpx;
	height:30rpx;
	margin-left:6rpx;
}
.store_left{
	width:46%;
	padding-left:4%;
}
.store_right{
	width:50%;
	height:100%;
	text-align:center;
	line-height:100rpx;
}


.openTime{
	border-top: solid 8px #F0F0F0;
	height: 90rpx;
}
.openTime image{
	width: 40rpx;
	height: 44rpx;
	margin-left: 30rpx;
	margin-right: 14rpx;
}